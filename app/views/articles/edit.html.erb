
<h1>Edit an Article</h1>

<div>
<% if @article.errors.any? %>
<h2>Ooops! The article was not saved due to the following errors</h2>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
    <li>
      <%= messages %>
    </li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with scope: :article, url: articles_update_path, method: :put do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :body %>
  <%= f.text_field :body %>
</div>

<div>
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Back', articles_path %>